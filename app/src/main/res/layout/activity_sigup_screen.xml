<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.SigupScreenActivity"
    >

    <LinearLayout
        android:background="@color/ThemeBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:textColor="@color/TitleText"
            android:layout_marginTop="50dp"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sign Up"/>

        <EditText
            android:backgroundTint="@color/ThemeTextField"
            android:textColorHint="@color/HindTextField"
            android:id="@+id/editTextText1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:hint="Choose Usernam"
            android:inputType="text"
            android:paddingHorizontal="20dp"
            android:textColor="#888888" />

        <EditText
            android:backgroundTint="@color/ThemeTextField"
            android:textColorHint="@color/HindTextField"
            android:id="@+id/editTextText2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:hint="Enter Email"
            android:inputType="text"
            android:paddingHorizontal="20dp"
            android:textColor="#888888" />

        <EditText
            android:backgroundTint="@color/ThemeTextField"
            android:textColorHint="@color/HindTextField"
            android:id="@+id/editTextText3"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:hint="Moble No"
            android:inputType="text"
            android:paddingHorizontal="20dp"
            android:textColor="#888888" />

        <EditText
            android:backgroundTint="@color/ThemeTextField"
            android:textColorHint="@color/HindTextField"
            android:id="@+id/editTextText4"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingHorizontal="20dp"
            android:textColor="#888888"

            />

        <TextView

            android:id="@+id/textView"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Must be 8 or more charaters and contain at least 1 number and 1 special character"
            android:textColor="#333333 "
            android:textSize="12dp" />

        <EditText
            android:backgroundTint="@color/ThemeTextField"
            android:textColorHint="@color/HindTextField"
            android:id="@+id/editTextText5"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:hint="Retype Password"
            android:inputType="text"
            android:paddingHorizontal="20dp"
            android:textColor="#888888" />

        <EditText
            android:backgroundTint="@color/ThemeTextField"
            android:textColorHint="@color/HindTextField"
            android:id="@+id/editTextText6"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:hint="Country"
            android:inputType="text"
            android:paddingHorizontal="20dp"
            android:textColor="#888888" />

        <Button
            android:textColor="@color/TextButtonColor"
            android:background="@color/ThemeButton"
            android:id="@+id/button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Button" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="you have an account?" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:onClick="onTextViewClicked"
                android:paddingHorizontal="5dp"
                android:text="SignIn"
                android:textColor="@color/ThemeButton" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>